{
    "compilerOptions": {
        "module": "ES2020",
        "sourceMap": true,
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "tsc.out",
        "declaration": true,
        "skipLibCheck": true,
        "allowJs": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "gink/*": ["./*"]
        }
    },
    "include": [
        "implementation/*.ts",
        "implementation/*.js",
        "builders/*.js",
        "unit-tests/*.ts"
    ],
    "typedocOptions": {
        "name": "Gink",
        "entryPointStrategy": "expand",
        "entryPoints": ["./implementation"],
        "out": "docs",
        "readme": "./markdown/index.md"
    }
}
